{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "noEmit": true
  }
}
